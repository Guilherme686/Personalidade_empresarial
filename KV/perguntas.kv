<Perguntas>:
    MDFloatLayout:
        id: float
        MDBoxLayout
            id: box
            pos_hint: {"center_x": .5, "center_y": .6}
            size_hint: .8, .6
            canvas:
                Color:
                    rgb: 153/255, 153/255, 255/255, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: 50,50,50,50

            MDLabel:
                id: label_perguntas
                text: ""
                font_size: app.dados["font"] + 10
                halign: "center"
                size: self.size

        MDFillRoundFlatButton:
            id: um
            text: "1"
            md_bg_color: "#9999ff"
            text_color: "black"
            font_size: app.dados["font"] + 10
            pos_hint: {"center_x": .1, "center_y": .2}
            size_hint: .15, .08
            on_release:
                root.altera_texto()
                app.respostas.append(1)

        MDFillRoundFlatButton:
            id: dois
            text: "2"
            md_bg_color: "#9999ff"
            text_color: "black"
            font_size: app.dados["font"] + 10
            pos_hint: {"center_x": .3, "center_y": .2}
            size_hint: .15, .08
            on_release:
                root.altera_texto()
                app.respostas.append(2)

        MDFillRoundFlatButton:
            id: tres
            text: "3"
            md_bg_color: "#9999ff"
            text_color: "black"
            font_size: app.dados["font"] + 10
            pos_hint: {"center_x": .5, "center_y": .2}
            size_hint: .15, .08
            on_release:
                root.altera_texto()
                app.respostas.append(3)

        MDFillRoundFlatButton:
            id: quatro
            text: "4"
            md_bg_color: "#9999ff"
            text_color: "black"
            font_size: app.dados["font"] + 10
            pos_hint: {"center_x": .7, "center_y": .2}
            size_hint: .15, .08
            on_release:
                root.altera_texto()
                app.respostas.append(4)

        MDFillRoundFlatButton:
            id: cinco
            text: "5"
            md_bg_color: "#9999ff"
            text_color: "black"
            font_size: app.dados["font"] + 10
            pos_hint: {"center_x": .9, "center_y": .2}
            size_hint: .15, .08
            on_release:
                root.altera_texto()
                app.respostas.append(5)

        MDFillRoundFlatButton:
            id: computar
            text: "Computar resultado"
            md_bg_color: "#99ccff"
            text_color: "black"
            font_size: app.dados["font"] + 10
            pos_hint: {"center_x": 1.5, "center_y": .6}
            size_hint: .15, .1
            on_release: app.mudar_tela("resultado")

