# Produção do aplicativa de personalidade empresarial

<Gerenciador>:
    TelaInicial:
        name: 'telainicial'
    TelaDados:
        id: TelaDados
        name: 'TelaDados'
    TelaInstrucoes:
        name: 'TelaInstrucoes'
    TelaFinal:
        name: 'TelaFinal'


#-----------------------------------------------------------
#                Tela de Inicial
#-----------------------------------------------------------

<TelaInicial>:
    FloatLayout:
        Label:
            id: label1
            text: 'Teste de Personalidade Empresarial'
            font_size: 40
            size_hint: 0.3, 0.15
            pos_hint: {'x': 0.35, 'y': 0.725}

        Button:
            text: 'Inicial teste'
            font_size: 30
            size_hint: 0.3, 0.12
            pos_hint: {'x': 0.35, 'y': 0.425}
            on_release: app.root.current = 'TelaInstrucoes'

        Button:
            id: Button1
            text: 'Sair'
            font_size: 30
            size_hint: 0.3, 0.12
            pos_hint: {'x': 0.35, 'y': 0.225}
            on_release: app.stop()

#-----------------------------------------------------------
#                Tela de Instruções
#-----------------------------------------------------------
<TelaInstrucoes>:
    name: 'TelaInstrucoes'
    FloatLayout:
        Label:
            text: 'Instruções de como proceder no teste'
            font_size: 30
            size_hint: 0.3, 0.15
            pos_hint: {'x': 0.35, 'y': 0.725}

        Label:
            text: 'Para preencher a autoavaliação, reflita e escolha o número que melhor\n descreva a sua prática no dia a dia, conforme cada comportamento listado. \n\n 1 - Nunca pratico este comportamento. \n\n 2 - Raramente pratico este comportamento. \n\n 3 - Algumas vezes pratico este comportamento. \n\n 4 - Na maioria das vezes pratico este comportamento. \n\n 5 - Sempre pratico este comportamento.'
            font_size: 25
            size_hint: 0.3, 0.15
            pos_hint: {'x': 0.35, 'y': 0.5}

        Button:
            text: 'Avançar'
            font_size: 30
            size_hint: 0.3, 0.12
            pos_hint: {'x': 0.35, 'y': 0.14}
            on_release: app.root.current = 'TelaDados'


#-----------------------------------------------------------
#                Tela de perguntar
#-----------------------------------------------------------

<TelaDados>:
    name: 'TelaDados'
    FloatLayout:
        Label:
            id: pergunta
            text: '1 ) Faço as coisas antes de solicitado ou antes de forçado pelas circustâncias'
            font_size: 30
            size_hint: 0.3, 0.15
            pos_hint: {'x': 0.35, 'y': 0.725}

        Button:
            text: '1'
            font_size: 30
            size_hint: 0.12, 0.12
            pos_hint: {'x': 0, 'y': 0.14}
            on_release: app.root.ids.TelaDados.perguntas(1)

        Button:
            text: '2'
            font_size: 30
            size_hint: 0.12, 0.12
            pos_hint: {'x': 0.22, 'y': 0.14}
            on_release: app.root.ids.TelaDados.perguntas(2)

        Button:
            text: '3'
            font_size: 30
            size_hint: 0.12, 0.12
            pos_hint: {'x': 0.44, 'y': 0.14}
            on_release: app.root.ids.TelaDados.perguntas(3)

        Button:
            text: '4'
            font_size: 30
            size_hint: 0.12, 0.12
            pos_hint: {'x': 0.66, 'y': 0.14}
            on_release: app.root.ids.TelaDados.perguntas(4)

        Button:
            text: '5'
            font_size: 30
            size_hint: 0.12, 0.12
            pos_hint: {'x': 0.88, 'y': 0.14}
            on_release: app.root.ids.TelaDados.perguntas(5)


#-----------------------------------------------------------
#                   Tela do Gráfico
#-----------------------------------------------------------

<TelaFinal>:
    name: 'TelaFinal'
    FloatLayout:
        Label:
            id: pergunta
            text: 'Todas as perguntas foram respondidas'
            font_size: 30
            size_hint: 0.3, 0.15
            pos_hint: {'x': 0.35, 'y': 0.725}

        Button:
            text: 'Computar teste'
            font_size: 30
            size_hint: 0.3, 0.12
            pos_hint: {'x': 0.35, 'y': 0.14}
            on_release: app.root.ids.TelaDados.soma()
